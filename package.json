{
  "name": "oa-y-mcp-service",
  "version": "2.0.0",
  "description": "MCP Service for OA-Y Learning Platform",
  "type": "module",
  "main": "index.js",
  "bin": {
    "oa-y-mcp-service": "./bin/oa-y-mcp-service.cjs"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "dev": "node index.js",
    "dev:inspect": "set DANGEROUSLY_OMIT_AUTH=true && npx @modelcontextprotocol/inspector node index.js",
    "http": "node src/server.js",
    "http:inspect": "npx @modelcontextprotocol/inspector http://localhost:3000/mcp"
  },
  "files": [
    "bin/",
    "dist/",
    "src/",
    "index.js",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "learning",
    "courses",
    "education",
    "model-context-protocol"
  ],
  "author": "OA-Y",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AdminRHS/oa-y-mcp-service.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.17.0",
    "esbuild": "^0.24.2"
  }
}
